{{ $machinetype := promptString "Machine type" -}}
{{ $defaultshell := promptString "Default shell (bash/zsh/fish)" -}}
[data]
    machinetype = {{ $machinetype | quote }}
    {{- if eq $defaultshell "zsh" }}
    enableprezto = {{ promptBool "Enable ZSH Prezto" }}
    {{- end }}
    defaultshell = {{ $defaultshell | quote }}
{{ if eq .chezmoi.os "darwin" }}
{{- $gpgemail := promptString "GPG key recipient email" -}}
encryption = "gpg"
[gpg]
    recipient = {{ $gpgemail | quote }}
{{ end -}}

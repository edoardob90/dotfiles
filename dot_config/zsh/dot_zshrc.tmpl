# Source Prezto
{{- if .enableprezto }}
if [[ -s "${HOME}/.prezto/init.zsh" ]]; then
  source "${HOME}/.prezto/init.zsh"
fi
{{- end }}

# All the rest ...

# Set the path where ZSH should look for additional completion function
fpath=(${ZDOTDIR}/completion $fpath)


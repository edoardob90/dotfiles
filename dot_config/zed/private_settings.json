      "username": "ebaldi",
      "projects": [
        {
          "paths": [
            "/users/ebaldi/scratch"
          ]
        },
        {
          "paths": [
            "~/apps"
          ]
        },
        {
          "paths": [
            "~/apps/empa-spack"
          ]
        }
      ],
      "nickname": "Daint@Alps"
    },
    {
      "host": "kirby",
      "projects": [
        {
          "paths": [
            "/var/www/dev.edoardob.blog"
          ]
        },
        {
          "paths": [
            "/var/www/edoardob.blog"
          ]
        }
      ]
    },
    {
      "host": "eiger.cscs.ch",
      "projects": [
        {
          "paths": [
            "/users/ebaldi/apps"
          ]
        },
        {
          "paths": [
            "~/apps/empa-spack"
          ]
        }
      ],
      "nickname": "Eiger@Alps"
    }
  ],
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": [".env"]
  },
  "vim_mode": false,
  "vim": {
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true
  },
  "command_aliases": {
    "W": "w",
    "Q": "q"
  },
  "base_keymap": "VSCode",
  "theme": {
    "mode": "system",
    "dark": "Flexoki Dark",
    "light": "Flexoki Light"
  },
  "buffer_font_size": 16,
  "buffer_font_family": "Berkeley Mono",
  "preferred_line_length": 80,
  "soft_wrap": "editor_width",
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "Rust": {
      "show_edit_predictions": true
    },
    "Python": {
      "show_edit_predictions": true,
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Astro": {
      "prettier": {
        "allowed": true,
        "plugins": ["prettier-plugin-astro"]
      },
      "format_on_save": "on"
    },
    "CSS": {
      "tab_size": 2,
      "format_on_save": "on"
    },
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."],
      "formatter": "language_server"
    },
    "YAML": {
      "formatter": "language_server",
      "tab_size": 2
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": false
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": "~/.local/bin/python"
        }
      }
    }
  }
}

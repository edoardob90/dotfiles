{
  "relative_line_numbers": "wrapped",
  "telemetry": {
    "diagnostics": true,
    "metrics": false,
  },
  "agent_servers": {
    "claude": {
      "default_model": "sonnet",
    },
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha",
  },
  "ssh_connections": [
    {
      "host": "daint.alps.cscs.ch",
      "username": "ebaldi",
      "projects": [
        {
          "paths": ["/users/ebaldi/scratch"],
        },
        {
          "paths": ["~/apps"],
        },
        {
          "paths": ["~/apps/empa-spack"],
        },
      ],
      "nickname": "Daint@Alps",
    },
    {
      "host": "kirby",
      "projects": [
        {
          "paths": ["/var/www/dev.edoardob.blog"],
        },
        {
          "paths": ["/var/www/edoardob.blog"],
        },
      ],
    },
    {
      "host": "eiger.cscs.ch",
      "projects": [
        {
          "paths": ["/users/ebaldi/apps"],
        },
        {
          "paths": ["~/apps/empa-spack"],
        },
      ],
      "nickname": "Eiger@Alps",
    },
  ],
  "agent": {
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-6-latest",
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-6-latest",
    },
    "model_parameters": [],
  },
  "edit_predictions": {
    "provider": "zed",
    "mode": "subtle",
    "disabled_globs": [".env"],
  },
  "vim_mode": false,
  "vim": {
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true,
  },
  "command_aliases": {
    "W": "w",
    "Q": "q",
  },
  "base_keymap": "VSCode",
  "theme": {
    "mode": "system",
    "dark": "Flexoki Dark",
    "light": "Flexoki Light",
  },
  "buffer_font_size": 16,
  "buffer_font_family": "Berkeley Mono",
  "preferred_line_length": 80,
  "soft_wrap": "editor_width",
  "inlay_hints": {
    "enabled": true,
  },
  "languages": {
    "Beancount": {
      "show_edit_predictions": false,
      "show_completions_on_input": true,
      "enable_language_server": true,
    },
    "Python": {
      "code_actions_on_format": {
        "source.organizeImports.ruff": true,
        "source.fixAll.ruff": true,
      },
    },
    "Astro": {
      "prettier": {
        "allowed": true,
        "plugins": ["prettier-plugin-astro"],
      },
    },
    "CSS": {
      "tab_size": 2,
    },
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."],
      "formatter": "language_server",
    },
    "YAML": {
      "formatter": "language_server",
      "tab_size": 2,
    },
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": false,
          },
        },
      },
    },
    "basedpyright": {
      "settings": {
        "python": {
          "pythonPath": "/Users/edoardo/.local/bin/python",
        },
      },
    },
  },
}
